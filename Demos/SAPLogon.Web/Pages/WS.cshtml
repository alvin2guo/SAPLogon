@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model WSModel

@{
    <meta name="viewport" content="width=device-width" />
    ViewData["Title"] = "SAP Assertion Ticket";
}

<div class="text-center">
    <form method="post">
        <table>
            <tr>
                <td>Cert ID: </td>
                <td>
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem { Text = "SSO (DSA 1024)", Value = "SSO" });
                        listItems.Add(new SelectListItem { Text = "SSO-RSA (RSA 2048)", Value = "SSO-RSA" });
                    }
                    @Html.DropDownListFor(Model => Model.SysID, listItems, "-- Select Certificate --")
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" asp-page-handler="Submit" /></td>
            </tr>
        </table>
        <hr />
    </form>

    @Html.TextAreaFor(Model => Model.TxtStatus, new { style = "width: 100%; font-family: monospace, monospace; font-size: 12px", rows = 50, @readonly = true })

</div>