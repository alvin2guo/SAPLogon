@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebGuiModel

@{
    ViewData["Title"] = "WebGUI";
}

<h3>WebGUI Demo</h3>
<br />
<div class="text-center">
    <form method="post">
        <table>
            <tr>
                <td>Cert ID: </td>
                <td>
                    <select asp-for="Cert" asp-items="Model.CertList" class="form-control">
                        <option value="">-- Select a certificate --</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>User ID: </td>
                <td><input type="text" id="UserID" name="UserID" value="DEMOUSER" readonly /></td>
            </tr>
            <tr>
                <td></td>
                <td><button type="submit" asp-page-handler="Submit" class="btn btn-primary">Submit</button></td>
            </tr>
        </table>
        <hr />
    </form>
    @Model.TxtStatus
</div>